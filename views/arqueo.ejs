<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Arqueo de Caja - Mi Comercio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-success shadow px-3">
        <a class="navbar-brand fw-bold" href="#"><i class="bi bi-shop me-2"></i> Mi Comercio</a>
        <div class="d-flex">
            <a href="/logout" class="btn btn-outline-light btn-sm"><i class="bi bi-box-arrow-right"></i> Cerrar
                sesión</a>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white vh-100 p-3">
            <h5 class="mb-4">Menú</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-3">
                    <a href="/dashboard" class="nav-link text-white fs-5">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="/ventas" class="nav-link text-white fs-5">
                        <i class="bi bi-cash-stack me-2"></i> Ventas
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="/gastos" class="nav-link text-white fs-5">
                        <i class="bi bi-cart-dash me-2"></i> Gastos
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="/categorias" class="nav-link text-white fs-5">
                        <i class="bi bi-tags me-2"></i> Categorías
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="/productos" class="nav-link text-white fs-5">
                        <i class="bi bi-box-seam me-2"></i> Productos
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="/arqueo" class="nav-link text-white fs-5">
                        <i class="bi bi-wallet2 me-2"></i> Arqueo de Caja
                    </a>
                </li>
            </ul>
        </div>

        <!-- Contenido -->
        <div class="container-fluid p-4">
            <h2 class="mb-4"><i class="bi bi-wallet2 me-2"></i> Arqueo de Caja</h2>

            <!-- Cards resumen -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card shadow border-0">
                        <div class="card-body text-center">
                            <i class="bi bi-cash text-success fs-3"></i>
                            <h6>Ventas del Día</h6>
                            <h4 class="text-success">$<%= Number(totalVentas).toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow border-0">
                        <div class="card-body text-center">
                            <i class="bi bi-cart-dash text-danger fs-3"></i>
                            <h6>Gastos del Día</h6>
                            <h4 class="text-danger">$<%= Number(totalGastos).toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow border-0">
                        <div class="card-body text-center">
                            <i class="bi bi-wallet2 text-primary fs-3"></i>
                            <h6>Resultado</h6>
                            <h4 class="text-primary">$<%= Number(resultado).toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones -->
            <form action="/arqueo/guardar" method="POST" class="d-flex gap-2 mb-4">
                <input type="hidden" name="totalVentas" value="<%= totalVentas %>">
                <input type="hidden" name="totalGastos" value="<%= totalGastos %>">
                <input type="hidden" name="resultado" value="<%= resultado %>">

                <button class="btn btn-success"><i class="bi bi-check2-circle"></i> Guardar Arqueo</button>
                <a href="/arqueo/exportar/pdf?fecha=<%= fecha %>&totalVentas=<%= totalVentas %>&totalGastos=<%= totalGastos %>&resultado=<%= resultado %>"
                    class="btn btn-danger">
                    <i class="bi bi-file-earmark-pdf"></i> Exportar PDF
                </a>
            </form>

            <!-- Historial -->
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-clock-history me-2"></i> Historial de Arqueos
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Apertura</th>
                                <th>Cierre</th>
                                <th>Fecha Apertura</th>
                                <th>Fecha Cierre</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (historial && historial.length> 0) { %>
                                <% historial.forEach(a=> { %>
                                    <tr>
                                        <td>
                                            <%= a.id %>
                                        </td>
                                        <td>$<%= Number(a.apertura).toFixed(2) %>
                                        </td>
                                        <td>$<%= Number(a.cierre).toFixed(2) %>
                                        </td>
                                        <td>
                                            <%= new Date(a.fecha_apertura).toLocaleString() %>
                                        </td>
                                        <td>
                                            <%= new Date(a.fecha_cierre).toLocaleString() %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5" class="text-center">No hay arqueos registrados</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <% if (mensaje) { %>
        <script>
            Swal.fire({
                icon: 'info',
                title: '<%= mensaje %>',
                timer: 2000,
                showConfirmButton: false,
                position: 'top-end'
            })
        </script>
        <% } %>
</body>

</html>